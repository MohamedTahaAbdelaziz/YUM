<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_animation"
    android:padding="15dp"
    app:circularflow_defaultRadius="@dimen/cardview_compat_inset_shadow">

   <com.google.android.material.imageview.ShapeableImageView
       android:id="@+id/shapeableImageView"

       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_marginStart="10dp"
       android:layout_marginTop="10dp"
       android:background="@color/white"
       android:src="@drawable/main_gradient_light"
       app:circularflow_defaultRadius="50dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:shapeAppearanceOverlay="@style/circleImageView">

   </com.google.android.material.imageview.ShapeableImageView>

   <TextView
       android:layout_width="109dp"
       android:layout_height="55dp"
       android:layout_marginStart="48dp"
       android:layout_marginTop="28dp"
       android:text="User"
       android:textSize="30sp"
       app:layout_constraintStart_toEndOf="@+id/shapeableImageView"
       app:layout_constraintTop_toTopOf="@+id/shapeableImageView">

   </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>